</section>

<script>
  // Definir los beneficios de cada plan
  const planBenefits = {
    basico: {
      plan: "Básico",
      comprobantes: "1,500",
      features: [
        "Módulo de ventas completo",
        "Reportes básicos de facturación",
        "Búsqueda de RUC y DNI",
        "Duplicar y copiar documentos",
        "1 sucursal y 1 almacén",
        "1 usuario del sistema"
      ],
      price: "59"
    },
    emprendedor: {
      plan: "Emprendedor",
      comprobantes: "3,000",
      features: [
        "Todo lo del plan Básico",
        "Módulo de compras integrado",
        "Búsqueda avanzada de comprobantes",
        "Kardex físico y valorizado",
        "Ingresos y salidas de almacén",
        "Hasta 3 usuarios simultáneos"
      ],
      price: "99"
    },
    empresarial: {
      plan: "Empresarial",
      comprobantes: "Ilimitados",
      features: [
        "Todo lo del plan Emprendedor",
        "Reportes avanzados y personalizados",
        "Traslado entre almacenes",
        "Guías de remisión electrónicas",
        "Libros electrónicos (PLE)",
        "API REST para integraciones",
        "Usuarios ilimitados"
      ],
      price: "119"
    }
  };

  // Función para actualizar el contenido del trial según el plan seleccionado
  function updateTrialContent(planKey: string) {
    const plan = planBenefits[planKey as keyof typeof planBenefits];
    if (!plan) return;

    // Actualizar el nombre del plan
    const planNameEl = document.getElementById('trial-plan-name');
    if (planNameEl) planNameEl.textContent = plan.plan;

    // Actualizar los comprobantes
    const comprobantesEl = document.getElementById('trial-comprobantes');
    const comprobantesContainer = comprobantesEl?.parentElement;
    if (comprobantesEl && comprobantesContainer) {
      if (plan.comprobantes === 'Ilimitados') {
        comprobantesContainer.innerHTML = `<span class="font-semibold"><span id="trial-comprobantes">Hasta 6000 Comprobantes</span></span>`;
      } else {
        comprobantesContainer.innerHTML = `<span class="font-semibold">Hasta <span id="trial-comprobantes">${plan.comprobantes}</span> comprobantes</span> durante tu periodo de prueba`;
      }
    }

    // Actualizar el precio
    const priceEl = document.getElementById('trial-price');
    if (priceEl) priceEl.textContent = plan.price;

    // Actualizar la lista de características
    const featuresList = document.getElementById('trial-features-list');
    if (featuresList) {
      featuresList.innerHTML = plan.features.map(feature => `
        <li class="flex items-start gap-3">
          <div class="w-6 h-6 bg-[#3E37FC]/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
            <svg class="w-4 h-4 text-[#3E37FC]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-sm text-[#010101]/80">${feature}</span>
        </li>
      `).join('');
    }

    // Actualizar el enlace de WhatsApp
    const ctaButton = document.getElementById('trial-cta-button');
    if (ctaButton) {
      ctaButton.setAttribute('href',
        `https://wa.me/51913346183?text=Hola,%20quiero%20activar%20mi%20mes%20de%20prueba%20gratis%20del%20plan%20${plan.plan}%20en%20RappiFact`
      );
    }

    // Guardar el plan seleccionado
    const section = document.getElementById('free-trial');
    if (section) {
      section.setAttribute('data-selected-plan', planKey);
    }
  }

  // Escuchar eventos personalizados para cambiar el plan
  document.addEventListener('DOMContentLoaded', () => {
    // Escuchar clics en los botones de los planes de la sección Pricing
    document.querySelectorAll('[data-plan-cta]').forEach(button => {
      button.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLElement;
        const planName = target.getAttribute('data-plan-cta');
        if (planName) {
          const planKey = planName.toLowerCase();
          updateTrialContent(planKey);

          // Scroll suave a la sección de prueba gratis
          const trialSection = document.getElementById('free-trial');
          if (trialSection) {
            trialSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });

    // Inicializar con el plan por defecto (empresarial)
    const section = document.getElementById('free-trial');
    const defaultPlan = section?.getAttribute('data-selected-plan') || 'empresarial';
    updateTrialContent(defaultPlan);
  });
</script>
