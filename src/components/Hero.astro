<section class="pt-24 sm:pt-28 md:pt-32 pb-12 sm:pb-16 md:pb-20 bg-gradient-to-br from-[#3E37FC]/5 via-white to-[#3E37FC]/10 overflow-hidden relative">
  <!-- Animated Background -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-5 sm:left-10 w-48 h-48 sm:w-72 sm:h-72 bg-[#3E37FC]/20 rounded-full blur-3xl animate-pulse shadow-[0_0_100px_rgba(62,55,252,0.3)]"></div>
    <div class="absolute bottom-20 right-5 sm:right-10 w-64 h-64 sm:w-96 sm:h-96 bg-[#3E37FC]/15 rounded-full blur-3xl animate-pulse shadow-[0_0_120px_rgba(62,55,252,0.25)]"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-6 sm:space-y-8 text-center lg:text-left">
        <div class="inline-flex items-center gap-2 bg-gradient-to-r from-[#3E37FC]/10 to-[#2B25B8]/10 text-[#3E37FC] px-3 py-2 sm:px-4 sm:py-2 rounded-full text-xs sm:text-sm font-semibold shadow-[0_4px_15px_rgba(62,55,252,0.2)] border border-[#3E37FC]/20">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Autorizado por SUNAT
        </div>

        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black leading-tight animate-fade-in-up">
          <span class="text-[#010101]">Facturación</span>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#3E37FC] to-[#2B25B8] block mt-1 sm:mt-2 drop-shadow-[0_2px_10px_rgba(62,55,252,0.3)] animate-shimmer bg-[length:200%_100%] italic">Simple y Rápida</span>
        </h1>

        <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-[#010101]/70 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          Sistema completo de facturación electrónica autorizado por SUNAT.
          <strong class="text-[#010101]">Sin contratos, sin instalaciones</strong>,
          listo para usar desde cualquier dispositivo.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start">
          <a
            href="https://wa.me/51913346183?text=Hola,%20quiero%20información%20sobre%20RappiFact"
            target="_blank"
            class="group bg-gradient-to-r from-[#3E37FC] to-[#2B25B8] text-white px-6 sm:px-8 py-3 sm:py-4 rounded-full font-bold text-base sm:text-lg hover:shadow-[0_10px_40px_rgba(62,55,252,0.5)] transition-all hover:scale-105 flex items-center justify-center gap-2 shadow-[0_6px_25px_rgba(62,55,252,0.3)] animate-glow"
          >
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            Comienza ahora
            <svg class="w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>

          <a
            href="tel:+51913346183"
            class="bg-white text-[#010101] px-6 sm:px-8 py-3 sm:py-4 rounded-full font-bold text-base sm:text-lg hover:bg-gray-50 transition-all border-2 border-[#3E37FC]/30 hover:border-[#3E37FC] hover:shadow-[0_6px_25px_rgba(62,55,252,0.2)] flex items-center justify-center gap-2"
          >
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Llamar Ahora
          </a>
        </div>

        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center lg:justify-start items-center gap-4 sm:gap-6 pt-4">
          <div class="flex items-center gap-2 text-xs sm:text-sm text-[#010101]/70">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-[#3E37FC]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span class="font-semibold">100% Seguro</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-[#010101]/70">
            <svg class="w-5 h-5 text-[#3E37FC]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span class="font-semibold">Certificado por SUNAT</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-[#010101]/70">
            <svg class="w-5 h-5 text-[#3E37FC]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span class="font-semibold">Sin Contratos</span>
          </div>
        </div>
      </div>

      <!-- Right Content - Hero Image/Illustration -->
      <div class="relative animate-fade-in-up delay-300">
        <div class="relative z-10">
          <!-- Animated Dashboard Preview -->
          <div class="bg-white rounded-2xl shadow-[0_10px_60px_rgba(62,55,252,0.25)] p-6 transform hover:scale-105 transition-all duration-500 border border-[#3E37FC]/10 animate-scale-in hover:shadow-[0_15px_70px_rgba(62,55,252,0.35)]">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
            <div class="space-y-4">
              <!-- Video de YouTube -->
              <div class="relative rounded-xl overflow-hidden shadow-[0_8px_30px_rgba(62,55,252,0.2)] border-2 border-[#3E37FC]/20 hover:border-[#3E37FC]/40 transition-all duration-300">
                <div class="relative pb-[56.25%] h-0">
                  <iframe
                    class="absolute top-0 left-0 w-full h-full rounded-xl"
                    src="https://www.youtube.com/embed/fVIUPy2YgOs"
                    title="RappiFact - Sistema de Facturación Electrónica"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen
                  ></iframe>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-4 pt-4">
                <div class="bg-blue-50 rounded-lg p-4 text-center">
                  <div class="text-2xl font-bold text-blue-600">1K+</div>
                  <div class="text-xs text-gray-600 mt-1">Facturas</div>
                </div>
                <div class="bg-purple-50 rounded-lg p-4 text-center">
                  <div class="text-2xl font-bold text-purple-600">24/7</div>
                  <div class="text-xs text-gray-600 mt-1">Soporte</div>
                </div>
                <div class="bg-green-50 rounded-lg p-4 text-center">
                  <div class="text-2xl font-bold text-green-600">100%</div>
                  <div class="text-xs text-gray-600 mt-1">Seguro</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Background Decorations -->
        <div class="absolute top-0 right-0 -z-10 w-72 h-72 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob"></div>
        <div class="absolute bottom-0 left-0 -z-10 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob animation-delay-2000"></div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0%, 100% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>

